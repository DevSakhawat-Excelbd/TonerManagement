@model IEnumerable<Toner.Domain.Entities.ProjectInfo>

@{
   ViewData["Title"] = "Index";
}

@*<h1 class="text-center">Project Information List</h1>*@


<div class="row">
   <div class="col-lg-12">
      <h1 class="text-center">Project Information List</h1>
      <table class="table">
         <thead>
            <tr>
               <th>
                  @Html.DisplayNameFor(model => model.ProjectId)
               </th>
               <th>
                  @Html.DisplayNameFor(model => model.ProjectName)
               </th>
               <th>
                  @Html.DisplayNameFor(model => model.ContactNumber)
               </th>
               <th>
                  @Html.DisplayNameFor(model => model.Address)
               </th>
               <th>
                  @Html.DisplayNameFor(model => model.CustomerId)
               </th>

               <th>
                  <p>
                     <a asp-action="Create">Create New</a>
                  </p>
               </th>
            </tr>
         </thead>
         <tbody>
            @foreach (var item in Model)
            {
               <tr>
                  <td>
                     @Html.DisplayFor(modelItem => item.ProjectId)
                  </td>
                  <td>
                     @Html.DisplayFor(modelItem => item.ProjectName)
                  </td>
                  <td>
                     @Html.DisplayFor(modelItem => item.ContactNumber)
                  </td>
                  <td>
                     @Html.DisplayFor(modelItem => item.Address)
                  </td>
                  <td>
                     @Html.DisplayFor(modelItem => item.CustomerId)
                  </td>

                  <td>
                     @Html.ActionLink("Edit", "Edit", new { projectId = item.ProjectId }) |
                     @Html.ActionLink("Details", "Details", new { projectId = item.ProjectId }) |
                     @Html.ActionLink("Delete", "Delete", new { projectId = item.ProjectId })
                  </td>
               </tr>
            }
         </tbody>
      </table>
   </div>
</div>

